                                <li class="user-footer">
                                    <div class="pull-left">
                                        @*<a href="/Test/Profile" class="btn btn-default btn-flat"><i class="fa fa-user"></i>&nbsp;Profile</a>*@
                                    </div>
                                    <div class="pull-right">
                                        <a href="javascript:return false" class="btn btn-default btn-flat" ng-click="SignOut()"><i class="fa fa-sign-out"></i>&nbsp;Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Uploads/ProfileImages/default-user.jpg" class="img-circle" alt="User Image" onerror="this.onerror = null; this.src = baseUrl+'/Uploads/ProfileImages/default-user.jpg'">
                    </div>
                    <div class="pull-left info">
                        <p>Logged In User</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <ul class="sidebar-menu">
                    <li class="header">GENERAL</li>
                    <li class="treeview">
                        <a href="javascript:return false;">
                            <i class="fa fa-home"></i>
                            <span>Home</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class="subMenuItem ViewThreats"><a href="/#/"><i class="fa fa-user"></i> Threats</a></li>
                        </ul>
                    </li>                    
                </ul>
            </section>
        </aside>
        @RenderBody()
